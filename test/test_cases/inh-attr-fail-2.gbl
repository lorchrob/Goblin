<Repeat> ::= <Val> <L>(false) <Length> { <Length> = <L>.len; <Length> > 0; };
<L>(v) ::= <E> <L>(v) { <E> = v; len := 1 + <L>.len; } | <Nil> { len := 0; };

<Val> :: Int;
<E> :: Int;
<Nil> :: Unit;
<Length> :: Int;
len :: Int;
v :: Int; // Probably want to inline this

