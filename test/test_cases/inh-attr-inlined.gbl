<Repeat> ::= <M>(<Str>) <Str> <Val> <L>(<Val>) <Length> { <Length> = <L>.len; <Length> > 5; <Val> > 1; str.len(<Str>) = 2; };
<L>(v::Int) ::= <E> <L>(v - 1) { <E> = v; len := 1 + <L>.len; } | <Nil> { len := 0; };
<M>(v::String) ::= <S> { <S> = v; };

<Val> :: Int;
<E> :: Int;
<Nil> :: Unit;
<Length> :: Int;
len :: Int;
<Str> :: String;
<S> :: String;

